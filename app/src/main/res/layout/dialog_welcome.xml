<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/imageOptimus"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/optimus_saludo"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/textOptimus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola mi estimado transportista, espero tengas un buen día. Vamos a entregar pedidos. En caso que me necesites aqui estaré :D"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp" />
</LinearLayout>
